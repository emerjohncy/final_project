<div class="container">
  <div class="card mb-4 w-50">
    <div class="card-body">
      <%= form_with model: [@shoe, @auction] do |f| %>
        <div class="form-outline mb-4">
          <%= f.text_area :description, autofocus: true, class:"form-control form-control-lg", type:"text" %>
          <%= f.label :description, class:"form-label", for: "form2Example17" %>
        </div>

        <label class="form-label" for="form2Example17">Start Date</label>
        <div class="form-outline mb-4">
          <%= f.datetime_local_field :start_date, autofocus: true, class:"form-control form-control-lg", type: "datetime-local" %>    <%# fix type (label is overlapping) %>
        </div>

        <label class="form-label" for="form2Example17">End Date</label>
        <div class="form-outline mb-4">
          <%= f.datetime_local_field :end_date, autofocus: true, class:"form-control form-control-lg", type: "datetime-local" %>      <%# fix type (label is overlapping) %>
        </div>

        <div class="form-outline mb-4">
          <%= f.label 'Payment Method:', class:"me-3" %>
          <%= f.radio_button :payment_method, "Cash" %>
          <%= f.label :payment_method_cash, "Cash Payment", class:"me-3" %>
          <%= f.radio_button :payment_method, "Card" %>
          <%= f.label :payment_method_card, "Visa / MasterCard" %>
        </div>
        <div class="form-outline mb-4">
          <%= f.number_field :starting_price, step: 0.01, autofocus: true, class:"form-control form-control-lg" %>
          <%= f.label :starting_price, class:"form-label", for: "form2Example17" %>
        </div>

        <div>
          <%= f.submit "Auction Shoes", class:"btn btn-primary" %>
          <%= link_to "Cancel", shoe_path(@shoe.id), class:"btn btn-danger" %>
        </div>
      <% end %>
    </div>

    <div>
      <%= @auction.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>
</div>
