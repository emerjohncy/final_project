

<%= render "layouts/sidebar", user: current_user %>
<div class="container">
<h1>Selling</h1>

<div>
    <% @auctions.each do |auction| %>
        <%= link_to shoe_auction_path(auction.shoe.id, auction.id) do %>
            <h6>Status: <%= auction.status %></h6>
            <%= render "auction_card", auction: auction %>
            <br>
        <% end %>
    <% end %>
</div>
</div>
