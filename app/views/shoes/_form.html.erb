<div class="container">
    <div class="card mb-4 w-50">
          <div class="card-body">
                <%= form_with model: @shoe do |f| %>

                    <form>

                        <div class="form-outline mb-4">
                             <%= f.text_field :brand, autofocus: true, class:"form-control form-control-lg", type:"text" %>
                            <label class="form-label" for="form2Example17">Brand</label>
                        </div>

                        <div class="form-outline mb-4">
                             <%= f.text_field :model, autofocus: true, class:"form-control form-control-lg", type:"text" %>
                            <label class="form-label" for="form2Example17">Model</label>
                        </div>


                        <div class="form-outline mb-4">
                            <%= f.text_area :condition, autofocus: true, class:"form-control form-control-lg", type:"text" %>
                            <label class="form-label" for="form2Example17">Condition</label>
                        </div>

                        <div class="form-outline mb-4">
                            <%= f.number_field :size, step: 0.5, autofocus: true, class:"form-control form-control-lg", type:"text" %>
                            <label class="form-label" for="form2Example17">Size</label>
                        </div>

                        <div class="form-outline mb-4">
                           <%= f.text_field :color, step: 0.5, autofocus: true, class:"form-control form-control-lg", type:"text" %>
                            <label class="form-label" for="form2Example17">Color</label>
                        </div>

                        <div class="form-outline mb-4">
                           <%= f.file_field :image, autofocus: true %>
                        </div>

                        <div>
                            <%= f.submit "Add Shoes", class:"btn btn-primary" %>
                            <%= link_to "Cancel", shoes_path, class:"btn btn-danger" %>
                        </div>
                    </form>
                <% end %>
            </div>

            <div><%= @shoe.errors.full_messages.each do |message| %>
                    <div><%= message %></div>
                <% end %>
            </div>
        </div>
    </div>
</div>
